#!/bin/sh
# Create executable file with chmod permission 755

file_name="$1"

if [ -z "$file_name" ]; then
    echo "Usage: $0 <file_name>"
    exit 1
fi

if [ -e "$file_name" ]; then
    echo "$0: File '$file_name' already exists"
    exit 1
fi

if [ ! -w "$(dirname "$file_name")" ]; then
    echo "$0: Directory '$(dirname "$file_name")' is not writable"
    exit 1
fi

touch "$file_name"
chmod 755 "$file_name"